@using PlanShift.Web.ViewModels.EmployeeGroup;
@model ManagementListViewModel

@{
    this.ViewData["Title"] = "Management";
}

<table class="table table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">Email</th>
        <th scope="col">Created shifts</th>
        <th scope="col">Managed shifts</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var manager in Model.Managers)
    {
        <tr>
            <td>@manager.UserFullName</td>
            <td>@manager.CreatedShiftsCount</td>
            <td>@manager.ManagedShiftsCount</td>
            <td></td>
        </tr>
    }
    </tbody>
</table>