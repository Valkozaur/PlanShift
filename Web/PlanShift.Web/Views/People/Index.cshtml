@using PlanShift.Web.ViewModels.Group;
@model GroupListViewModel<GroupPeopleCountViewModel>

@{
    this.TempData["Title"] = "People";
}

<div class="container">
    <div class="row">
        <a class="btn btn-success" asp-controller="EmployeeGroup" asp-action="AddEmployeeToGroup" asp-route-groupId="@Model.ActiveTabGroupId">Add Existing Employee</a>
        <a class="btn btn-primary" asp-controller="EmployeeGroup" asp-action="AddEmployeeToGroup" asp-route-groupId="@Model.ActiveTabGroupId">Add New Employee</a>
    </div>

    <div class="row">
        <div class="col-3 border h-100">
            <div class="btn-group-vertical btn-group-lg d-flex w-100">
                @foreach (var group in Model.Groups)
                {
                    <a type="submit" class="btn btn-lg btn-outline-secondary w-100" asp-controller="People" asp-action="SwitchToTabs" asp-route-activeTabGroupId="@group.Id">
                        <span class="float-left text-secondary">@group.Name</span><span class="float-right text-secondary numberCircle">@group.EmployeesCount</span>
                    </a>
                }
            </div>
        </div>

        <div class="col-9">
            <vc:group-members group-id="@Model.ActiveTabGroupId"></vc:group-members>
        </div>
    </div>
</div>
