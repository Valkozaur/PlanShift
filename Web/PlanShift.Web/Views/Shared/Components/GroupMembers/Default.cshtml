@using PlanShift.Web.ViewModels.People;
@model EmployeeListViewModel<EmployeeViewModel>;

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Email</th>
        <th scope="col hidden">IsHrManagement</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.UserFullName</td>
                <td>@(employee.IsManagement ? "✓" : "")</td>
            </tr>
        }
    </tbody>
</table>