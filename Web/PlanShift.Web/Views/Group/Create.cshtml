@using PlanShift.Web.ViewModels.Group;
@model GroupInputModel

<h1>CreateShiftChangeAsync</h1>

<h4>Group for @($"{Model.BusinessName}")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandardSalary" class="control-label"></label>
                <input asp-for="StandardSalary" class="form-control" />
                <span asp-validation-for="StandardSalary" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="BusinessId" />
            <br />
            <div class="form-group">
                <input type="submit" value="CreateShiftChangeAsync" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>