@using PlanShift.Web.ViewModels.Group;
@model GroupInputModel

@{
    this.TempData["Title"] = "Create Group";
}

<h4>Group for @($"{Model.BusinessName}")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Group" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandardSalary" class="control-label"></label>
                <input asp-for="StandardSalary" class="form-control" />
                <span asp-validation-for="StandardSalary" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="BusinessId" />
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Group</button>
            </div>
        </form>
        
    </div>
</div>